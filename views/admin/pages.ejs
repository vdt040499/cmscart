<% include ../partials/admin-header %>
<h5 class="page-title mt-2">Pages</h5>
<a class="btn btn-primary mb-3" href="/admin/pages/add-page">Add a new page</a>

<table class="table table-striped sorting">
    <thead>
        <tr class="home">
            <th>Title</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% pages.forEach(function(page) {%>
        <tr id="id_<%= page._id %>" class="<%= page.slug %>">
            <td><%= page.title %></td>
            <td><a href="/admin/pages/edit-page/<%= page.slug %>">Edit</a></td>
            <% if(page.slug == "home") {%>
            <td></td>
            <% } else { %>
            <td><a href="/admin/pages/delete-page/<%= page.slug %>">Delete</a></td>
            <% } %>
        </tr>
        <% }); %>
    </tbody>
</table>

<script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>
<script>
    $('tbody').sortable({
        items: "tr:not('.home')",
        placeholder: "ui-state-hightlight",
        update: function () {
            var ids = $('tbody').sortable("serialize");
            var url = "/admin/pages/reorder-pages";

            $.post(url, ids);
        }
    });
</script>

<% include ../partials/admin-footer %>
