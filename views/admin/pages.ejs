<% include ../partials/admin-header %>
    <h5 class="page-title mt-2">Pages</h5>
    <a class="btn btn-primary mb-3" href="/admin/pages/add-page">Add a new page</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% pages.forEach(function(page) {%>
                <tr>
                    <td><%= page.title %></td>
                    <td><a href="/admin/pages/edit-page/<%= page.slug %>">Edit</a></td>
                    <% if(page.slug == "home") {%>
                        <td></td>
                    <% } else { %>
                        <td><a href="/admin/pages/delete-page/<%= page.slug %>">Delete</a></td>
                    <% } %>  
                </tr>
            <% }); %>
        </tbody>
    </table>
<% include ../partials/admin-footer %>